<MainScreen>:

    login: log
    password: passw

    Button:
        text: 'Вход'
        size_hint: .4, .1
        pos_hint: {'center_x': .25, 'center_y': .40}
        on_press: root.login_user()

    Button:
        text: 'Регистрация'
        size_hint: .4, .1,
        pos_hint: {'center_x': .75, 'center_y': .40}
        on_press: root.register_user()

    TextInput:
        hint_text: 'Логин'
        size_hint: .9, .1
        pos_hint: {'center_x': .5, 'center_y': .7}
        id: log
        
    TextInput:
        hint_text: 'Пароль'
        size_hint: .9, .1
        pos_hint: {'center_x': .5, 'center_y': .55}
        id: passw
        
<Container>:

    ti: text_input
    timer: time

    Label:
        text: 'Задача:'
        size_hint: .15, .05
        pos_hint: {'x': .05, 'y': .94}

    Label:
        text: 'Время (в секундах):'
        size_hint: .3, .05
        pos_hint: {'x': .05, 'y': .75}
    
    Button:
        text: 'Запуск таймера'
        size_hint: .425, .2
        pos_hint: {'x': .05, 'y': .3}
        background_normal: ''
        background_color: (255/255, 255/255, 255/255, 1)
        color: (0/255, 0/255, 0/255, 1)
        on_press: root.btn1_pressed()

    Button:
        text: 'Очищение текстовых полей'
        size_hint: .425, .2 
        pos_hint: {'x': .525, 'y': .3}
        background_normal: ''
        background_color: (255/255, 255/255, 255/255, 1)
        color: (0/255, 0/255, 0/255, 1)
        on_press: root.btn2_pressed()

    Button:
        text: 'Отобразить последнюю\n               запись'
        size_hint: .425, .2
        pos_hint: {'x': .05, 'y': .05}
        background_normal: ''
        background_color: (255/255, 255/255, 255/255, 1)
        color: (0/255, 0/255, 0/255, 1)
        on_press: root.btn3_pressed() 

    Button:
        text: 'Очищение записей'
        size_hint: .425, .2 
        pos_hint: {'x': .525, 'y': .05}
        background_normal: ''
        background_color: (255/255, 255/255, 255/255, 1)
        color: (0/255, 0/255, 0/255, 1)
        on_press: root.btn4_pressed()    

    TextInput:
        id: text_input
        hint_text: 'Введите текст...'
        size_hint: .9, .15 
        pos_hint: {'x': .05, 'y': .80}

    TextInput:
        id: time
        hint_text: 'Введите вермя...'
        size_hint: .9, .15 
        pos_hint: {'x': .05, 'y': .60}     
